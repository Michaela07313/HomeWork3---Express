extends ../shared/layout
block main-content
  head
    title Review all articles
  body 
    .wrapper.row2
      #container.clear
        section#services.clear
          each article in articles
            article.one_third
              h3 #{article.title} 
              h2 #{article.description}
              h2 #{moment(article.date).format("YYYY/MM/DD")}
              footer.more
                a(href="/articles/details/" + article._id) Read More Â»
            br
        ul.pagination
          - for (var x = 0; x < Math.ceil(pages); x++)
            li(class= (x == page) ? 'active' : '')
              a(href='?page=' + x)=(x+1)