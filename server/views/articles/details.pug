extends ../shared/layout
block main-content
  head
    title Article details
  body
    .wrapper.row2
      #container.clear
        section#services.clear
          each art in article
            article.one_third
              h3 #{art.title}
              h4 #{art.description}
              h4 #{art.content}
              h4 #{art.author}
              if (article.updatedDate)
                h4 #{moment(art.updatedDate).format("YYYY/MM/DD")}
              else
                h4 #{moment(art.date).format("YYYY/MM/DD")}        
              footer.more
                a(href="/articles/edit/" + art._id) Edit Â»
                